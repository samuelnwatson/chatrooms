<div class="menu">
  <h3><%= link_to "Create Chatroom", new_chatroom_path, class: "menu menu__element-link" %></h3>
</div>

<div class="menu">
  <h2 class="menu">Join a Chatroom:</h2>
  <p>
    <% @chatrooms.each do |chatroom| %>
      <p>
        <%= link_to "#{chatroom.topic}", chatroom_path(chatroom), class: "menu__element menu__element-link" %>
        <% if chatroom.posts.last.respond_to?(:created_at) %>
          <br>
          - Active <%= time_ago_in_words(chatroom.posts.last.created_at) %> ago,
          by <%= chatroom.posts.last.user.username %>
        <% else %>
          <br>
          - created by <%= chatroom.creator %>,
          <%= time_ago_in_words(chatroom.created_at) %> ago.
        <% end %>
      </p>
    <% end %>
  </p>
</div>
