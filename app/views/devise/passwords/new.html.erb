<h2 class="menu">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: "menu" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions menu"><br />
    <%= f.submit "Send me reset password instructions", class: "button__submit" %>
  </div>
<% end %>

<div class="menu"><br />
  <%= render "devise/shared/links" %>
</div>
